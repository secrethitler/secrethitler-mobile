<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecretHitlerMobile.Views.MainPage"
             BackgroundColor="#E16A57">

    <StackLayout Orientation="Vertical">
        <Image Source="Title.png" VerticalOptions="Fill" Margin="0, 20"></Image>
        <Button Text="Create Game" BackgroundColor="White" TextColor="#E16A57" 
                HorizontalOptions="Center" VerticalOptions="Center" Margin="10, 60"></Button>
        <Button Text="Join Game" BackgroundColor="White" TextColor="#E16A57" 
                HorizontalOptions="Center" Margin="10, 10"></Button>
    </StackLayout>

</ContentPage>