<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             x:Class="SecretHitlerMobile.Views.LobbyPage"
             BackgroundColor="#E16A57">

	<StackLayout Orientation="Vertical">

		<Label Text="{Binding UpdateLobbyIdLabel}" FontSize="Medium" FontAttributes="Italic" TextColor="#fefcbf" Margin="10,10,10,10"/>

		<ListView x:Name="UserListView">
			<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<Label Margin="10,10" Text="{Binding Name}" TextColor="#fefcbf" FontSize="Medium" VerticalTextAlignment="Center"/>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>

</ContentPage>