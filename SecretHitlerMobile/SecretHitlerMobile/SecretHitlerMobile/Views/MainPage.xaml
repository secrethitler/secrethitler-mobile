<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SecretHitlerMobile.Views.MainPage"
			 BackgroundColor="#ff9e80">
	<!--BackgroudnColor Needs to be set in order to not display the splashscreen instead-->

	<StackLayout Orientation="Vertical">
		<Image Source="Title.png" VerticalOptions="Fill" Margin="0, 20"></Image>
		<Button Text="Create Game" 
				BackgroundColor="White" 
				TextColor="#000000" 
                HorizontalOptions="Center" 
				VerticalOptions="Center" 
				Margin="10, 60" 
				WidthRequest="150"
				CornerRadius="5"
				IsEnabled="{Binding CanExecuteNavigation}"
				Command="{Binding InitiateGame}"/>

		<Button Text="Join Game"  
				BackgroundColor="White" 
				TextColor="#000000" 
				HorizontalOptions="Center" 
				Margin="10, 10"
				WidthRequest="150"
				CornerRadius="5"
				Clicked="OnUsernameDialogOpenAsync"/>

		<Label	Text="{Binding UpdateLandingPageLabel}"
				TextColor="#000000"  
				HorizontalOptions="Center" 
				VerticalOptions="Center" 
				FontFamily="Roboto" 
				VerticalTextAlignment="Start" 
				Margin="30, 40"/>

	</StackLayout>

</ContentPage>